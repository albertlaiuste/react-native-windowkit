{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": false,
    "noEmit": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "lib/index.ts",
    "components/**/*",
    "constants/**/*",
    "hooks/**/*",
    "types/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
